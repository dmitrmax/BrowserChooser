<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
"http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

  <key>CFBundleIdentifier</key>
  <string>com.github.dmitrmax.BrowserChooser</string>

  <key>CFBundleName</key>
  <string>BrowserChooser</string>

  <key>CFBundleExecutable</key>
  <string>BrowserChooser</string>

  <key>CFBundlePackageType</key>
  <string>APPL</string>

  <!-- This tells macOS the app supports URLs -->
  <key>CFBundleURLTypes</key>
  <array>
    <dict>
      <key>CFBundleURLName</key>
      <string>Web URLs</string>
      <key>CFBundleURLSchemes</key>
      <array>
        <string>http</string>
        <string>https</string>
      </array>
    </dict>
  </array>

  <!-- This tells macOS the app is a potential default browser -->
  <key>LSHandlers</key>
  <array>
    <dict>
      <key>LSHandlerRoleAll</key>
      <string>com.github.dmitrmax.BrowserChooser</string>
      <key>LSHandlerURLScheme</key>
      <string>http</string>
    </dict>
    <dict>
      <key>LSHandlerRoleAll</key>
      <string>com.github.dmitrmax.BrowserChooser</string>
      <key>LSHandlerURLScheme</key>
      <string>https</string>
    </dict>
  </array>

  <key>LSApplicationCategoryType</key>
  <string>public.app-category.web-browser</string>

</dict>
</plist>
